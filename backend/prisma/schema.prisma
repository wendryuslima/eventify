

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id          Int           @id @default(autoincrement())
  title       String
  description String?
  status      EventStatus   @default(ACTIVE)
  capacity    Int
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  inscriptions Inscription[]
}

model Inscription {
  id        Int      @id @default(autoincrement())
  name      String
  phone     String
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  eventId   Int
  createdAt DateTime @default(now())

  @@unique([eventId, phone])
}

model AuditLog {
  id         Int      @id @default(autoincrement())
  action     String   // "EVENT_CREATED", "EVENT_UPDATED", "EVENT_DELETED", "INSCRIPTION_CREATED", "INSCRIPTION_CANCELLED", "INSCRIPTION_UPDATED"
  entityType String   // "Event", "Inscription"
  entityId   Int      // ID do evento ou inscrição
  userId     String?  // null (sem sistema de login)
  userIp     String?  // IP do usuário
  details    Json     // Dados da operação
  timestamp  DateTime @default(now())

  @@index([action])
  @@index([entityType])
  @@index([timestamp])
}

enum EventStatus {
  ACTIVE
  INACTIVE
}
