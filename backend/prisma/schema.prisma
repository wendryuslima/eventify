

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id          Int           @id @default(autoincrement())
  title       String
  description String?
  status      EventStatus   @default(ACTIVE)
  capacity    Int
  inscriptions Inscription[]
}

model Inscription {
  id        Int      @id @default(autoincrement())
  name      String
  phone     String
  event     Event    @relation(fields: [eventId], references: [id])
  eventId   Int
  createdAt DateTime @default(now())

  @@unique([eventId, phone])
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  action    String   // 'CREATE_EVENT', 'UPDATE_EVENT', 'DELETE_EVENT', 'INSCRIBE', 'CANCEL_INSCRIPTION'
  entityId  Int?     // ID do evento ou inscrição
  details   Json?    // Detalhes adicionais da ação
  createdAt DateTime @default(now())
}

enum EventStatus {
  ACTIVE
  INACTIVE
}
